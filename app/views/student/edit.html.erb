<%= form_for @student, url: {action: "update"}, html: {class: "user_form"} do |f| %>
  <%= f.label :name, "Name"%>
  <%= f.text_field :name, value: @student.name, placeholder: "Name", class: 'form-control' %><br>
  <%= f.label :email, "Email", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'  %>
  <%= f.text_field :email,  value: @student.email, placeholder: "Email", class: 'form-control' , :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %><br>
  <%= f.label :slack, "Slack Username" %>
  <%= f.text_field :slack, value: @student.slack, placeholder: "Slack Username", class: 'form-control' %><br>
  <%= f.label :github, "GitHub Username" %>
  <%= f.text_field :github,  value: @student.github, class: 'form-control' %><br>
  <%= f.label :bio, "Bio" %>
  <%= f.text_area :bio,  value: @student.bio, placeholder: "Briefly describe your background and experience with programming.", class: 'form-control' %>
  <br>
  <%= f.submit "Confirm Information", class: 'btn btn-default' %>
<% end %>


