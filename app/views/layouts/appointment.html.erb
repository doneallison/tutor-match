<!DOCTYPE html>
<html>
<head>
  <title>TutorMatch</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>

  <style type="text/css">
    section#col-left {
    display: none;
    }

    #config-tool {
      display: none
    }

    .hide {
      display:none;
    }
  </style>

  <div id="theme-wrapper">
    <header class="navbar" id="header-navbar">
      <div class="container">
        <a href="/" id="logo" class="navbar-brand">
          <h5>TUTOR <strong>MATCH</strong></h5>
        </a>
        <div class="clearfix">
          <div class="nav-no-collapse pull-right" id="header-nav">
            <ul class="nav navbar-nav pull-right">
              <li class="mobile-search">
                <a class="btn">
                  <i class="fa fa-search"></i>
                </a>

                <div class="drowdown-search">
                  <form role="search">
                    <div class="form-group">
                      <input type="text" class="form-control" placeholder="Search...">
                      <i class="fa fa-search nav-search-icon"></i>
                    </div>
                  </form>
                </div>
              </li>
              <li class="hidden-xs">
                <% if @tutor %>
                  <%= link_to edit_tutor_path(current_tutor), :class => 'btn' do %>
                    <i class="fa fa-cog"></i>
                  <% end %>
                <% else %>
                  <%= link_to edit_student_path(current_student), :class => 'btn' do %>
                    <i class="fa fa-cog"></i>
                  <% end %>
                <% end %>
              </li>
              <li class="dropdown profile-dropdown">

                <% if @tutor %>
                  <%= link_to current_tutor, :class => 'dopdown-toggle' do %>
                    <img src="http://www.placekitten.com/240/200" alt=""/>
                    <%# image_tag("") %>
                    <span class="hidden-xs">
                        <%= @user.name %>
                    </span>
                  <% end %>
                <% else %>
                  <%= link_to current_student, :class => 'dopdown-toggle' do %>
                    <img src="http://www.placekitten.com/240/200" alt=""/>
                    <%# image_tag("") %>
                    <span class="hidden-xs">
                        <%= @user.name %>
                    </span>
                  <% end %>
                <% end %>


              </li>
              <li class="hidden-xxs">
               <%= link_to logout_path, :class => 'btn' do %>
                <i class="fa fa-power-off"></i>
               <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </header>
    <div id="page-wrapper" class="container">
      <div class="row">
        <div id="nav-col">
        </div>
        <div id="content-wrapper">
          <div class="row">
            <div class="col-lg-12">

              <!-- <div class="row">
                <div class="col-lg-12">
                  <ol class="breadcrumb">
                    <li><a href="#">Edit profile</a></li>
                    <li class="active"><span>STUDENT</span></li>
                  </ol>

                  <h1>Sign up</h1>
                </div>
              </div> -->

              <div class="row">
                <div class="col-lg-12">
                  <div class="main-box clearfix">
                    <header class="main-box-header clearfix">
                      <h2></h2>
                    </header>
                    <div class="main-box-body clearfix">

                      <%= yield %>

                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>

          <footer id="footer-bar" class="row">
            <p id="footer-copyright" class="col-xs-12">
              &copy; 2014 <a href="http://www.flatironschool.com" target="_blank">Flatiron School</a>. Powered by Centaurus Theme.
            </p>
          </footer>
        </div>
      </div>
    </div>
  </div>
</body>
</html>